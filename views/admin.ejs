<!DOCTYPE html>
<html ng-app="myApp">
<head><% include ./partials/head.ejs %></head>
<body ng-controller="adminController as adminCtrl" ng-cloak>
<div class="container">
    <% include ./partials/nav.ejs %>
    <!--------------------------- Contents ------------------------------>
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default panel-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="post in posts">
                        <td><input type="checkbox"></td>
                        <td><a href="#">{{post.title}}</a></td>
                        <td>{{post.created}}</td>
                        <td>
                            <a href="#" ng-click="destroyPost(post._id)"><i class="fa fa-remove"></i></a>
                            <a href="#" ng-click="findPostById(post._id)"><i class="fa fa-pencil"></i></a>
                        </td>
                    </tr>
                    </tbody>
                </table>

                <form novalidate>
                    <h2>Add Post</h2><br>
                    <fieldset class="form-group">
                        <label for="postTitle">Title</label>
                        <input type="text" class="form-control" id="postTitle" ng-model="newPost.title" placeholder="Title">
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="postContents">Contents</label>
                        <textarea class="form-control" id="postContents" ng-model="newPost.contents" placeholder="Contents"></textarea>
                    </fieldset>
                    <button class="btn btn-primary" ng-click="createPost()">Submit</button>
                </form>

                <form novalidate>
                    <h2>Update Post</h2><br>
                    <fieldset class="form-group">
                        <label for="updateTitle">Title</label>
                        <input type="text" class="form-control" id="updateTitle" value="updatePostData.title" ng-model="updatePostData.title" placeholder="Title">
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="updateContents">Contents</label>
                        <textarea class="form-control" id="updateContents" ng-model="updatePostData.contents" placeholder="Contents">{{updatePostData.contents}}</textarea>
                    </fieldset>
                    <button class="btn btn-primary" ng-click="updatePost(updatePostData._id)">Update</button>
                </form>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Role</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="user in users">
                        <td><input type="checkbox"></td>
                        <td>{{user.username}}</td>
                        <td>{{user.password}}</td>
                        <td>{{user.role}}</td>
                        <td>{{user.created}}</td>
                        <td>
                            <a href="#" ng-click="destroyUser(user._id)"><i class="fa fa-remove"></i></a>
                            <a href="#" ng-click="findUserById(user._id)"><i class="fa fa-pencil"></i></a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!----------------------- Right ----------------------->
        <div class="col-md-3 col-md-offset-1">
            <div class="panel">
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="panel-title"><h4>Admin Panel</h4></div>
                    </li>
                    <li class="list-group-item"><a href="">Posts</a></li>
                    <li class="list-group-item"><a href="">Users</a></li>
                    <li class="list-group-item"><a href="">Settings</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


<% include ./partials/jsFile.ejs %>
</body>
<% include ./partials/footer.ejs %>
</html>
