<!DOCTYPE html>
<html ng-app="myApp">
<head><% include ./partials/head.ejs %></head>
<body ng-controller="myController as myCtrl" ng-cloak>
<div class="container">
    <% include ./partials/nav.ejs %>
    <!--------------------------- Contents ------------------------------>
    <div class="row">
        <!----------------------- Left ----------------------->
        <div class="col-md-8">
            <div>
                <div class="panel panel-default" ng-repeat="post in posts">
                    <div class="panel-body">
                        <h3>{{post.title}}</h3>
                    <span class="">
                        <i class="fa fa-clock-o"></i><abbr class="published"> {{post.created}}</abbr>
                    </span>
                        <hr>
                        <div>
                            <p>{{post.contents}}</p>
                        </div>
                        <a href="#">Read More...</a>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!----------------------- Right ----------------------->
        <div class="col-md-3 col-md-offset-1">
            <div class="panel panel-default">
                <form class="navbar-form" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default"><i class="fa fa-search" aria-hidden="true"></i></button>
                </form>
            </div>

            <div class="panel">
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="panel-title"><h4>Category</h4></div>
                    </li>
                    <li class="list-group-item"><a href="">Programming</a></li>
                    <li class="list-group-item"><a href="">Music</a></li>
                </ul>
            </div>

            <div class="panel">
                <div class="panel-body">
                    <div class="panel-title"><h4>Tag</h4></div>
                    <a href="#">Java</a>
                    <a href="#">Python</a>
                    <a href="#">Python</a>
                    <a href="#">Python</a>
                    <a href="#">Python</a>
                    <a href="#">Python</a>
                    <a href="#">Python</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./partials/jsFile.ejs %>
</body>
<% include ./partials/footer.ejs %>
</html>
